<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ServeSpeed" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:clearTaskOnLaunch="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayVideo"
            android:label="RacquetContactTime" />
        <activity
            android:name=".ServePosition"
            android:label="Select Player Position/Height" />
        <activity
            android:name=".ServePosition2"
            android:label="Select Ball Bounce Position" />
        <activity
            android:name=".CalculateSpeedClass"
            android:label="ServeSpeed" />
        <activity
            android:name=".HelpVideo"
            android:theme="@style/NewTranslucent"
            android:label="@string/title_activity_help_video" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

</manifest>
